<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".Details2Activity">


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Summary"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_margin="25dp"
        android:textColor="#7B7575"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/tombolBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#EDEDED"
        android:src="@drawable/baseline_arrow_back_ios_24">
    </ImageButton>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background">

        <androidx.cardview.widget.CardView
            android:id="@+id/poster"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/film1"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/film1" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/poster"
            android:text="BRAVE"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/bioskopPilihan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/poster"
            android:layout_below="@id/judul"
            android:text="bioskop"
            android:textSize="12dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/studio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/poster"
            android:layout_below="@id/bioskopPilihan"
            android:text="Studio 1"
            android:textSize="12dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/tanggalPilihan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/poster"
            android:layout_below="@id/studio"
            android:text="2 Desember 2023"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#7B7575">
        </TextView>

        <TextView
            android:id="@+id/jamTayang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/tanggalPilihan"
            android:layout_below="@id/studio"
            android:text="- 12.45"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#7B7575">
        </TextView>

        <TextView
            android:id="@+id/orderNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="70dp"
            android:layout_below="@id/poster"
            android:text="Order Number"
            android:textStyle="bold"
            android:textColor="#7B7575">
        </TextView>

        <TextView
            android:id="@+id/Nomor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/orderNum"
            android:text="1198804794001625088"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#333333">
        </TextView>

        <TextView
            android:id="@+id/seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/Nomor"
            android:text="Seat"
            android:textStyle="bold"
            android:textColor="#7B7575">
        </TextView>

        <TextView
            android:id="@+id/hasilSeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/seat"
            android:text="Regular"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#333333">
        </TextView>

        <TextView
            android:id="@+id/MetodePembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/hasilSeat"
            android:text="Payment Method"
            android:textStyle="bold"
            android:textColor="#7B7575">
        </TextView>

        <TextView
            android:id="@+id/TFbank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/MetodePembayaran"
            android:text="Bank Transfer - "
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#333333">
        </TextView>

        <TextView
            android:id="@+id/hasilBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@id/MetodePembayaran"
            android:layout_toEndOf="@id/TFbank"
            android:text="MANDIRI"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#333333">
        </TextView>

        <TextView
            android:id="@+id/hasilSeat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/hasilBank"
            android:text="Regular"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#7B7575">
        </TextView>

        <TextView
            android:id="@+id/textSeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/hasilBank"
            android:layout_toEndOf="@id/hasilSeat2"
            android:text="Seat"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#7B7575">
        </TextView>

        <TextView
            android:id="@+id/hargaTiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/hasilSeat2"
            android:text="35.000"
            android:textStyle="bold"
            android:textColor="#333333">
        </TextView>

        <TextView
            android:id="@+id/fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/hargaTiket"
            android:text="Convenience Fee"
            android:textStyle="bold"
            android:textColor="#7B7575">
        </TextView>

        <TextView
            android:id="@+id/textFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/fee"
            android:text="-"
            android:textStyle="bold"
            android:textColor="#333333">
        </TextView>

        <TextView
            android:id="@+id/textTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/textFee"
            android:text="Actual Pay"
            android:textStyle="bold"
            android:textColor="#7B7575">
        </TextView>

        <TextView
            android:id="@+id/totalan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/textTotal"
            android:text="35.000"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#333333">
        </TextView>


    </RelativeLayout>


</RelativeLayout>